#!/bin/bash

. hooks/common

if [ "${SOURCE_BRANCH}" == "release" ] || [ "${DEBUG}" == "true" ]; then
  if [ "${SOURCE_BRANCH}" != "release" ]; then
    echo "⚠️⚠️⚠️ Would exit, but DEBUG is '${DEBUG}'".
  fi

  run_build --push-only
else
  echo "⚠️⚠️⚠️ Only pushing on 'release' branch, but current branch is '${SOURCE_BRANCH}'"
  exit 0
fi
