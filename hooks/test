#!/bin/bash

. hooks/common

run_test() {
  echo "ğŸ³ğŸ³ğŸ³ Testing '${1}'"
  VERSION="${1}" docker-compose run netbox ./manage.py test
  docker-compose down -v
  echo "ğŸ³ğŸ³ğŸ³ Done testing '${1}'"
}

# test on builds of 'branches'
if [ "${BUILD}" == "branches" ] \
   || [ "${DEBUG}" == "true" ]; then
  run_test latest
  run_test snapshot
# test on bulds of 'this' (i.e. pull request)
elif [ "${BUILD}" == "this" ]; then
  run_test latest
else
  echo "ğŸ³ğŸ³ğŸ³ No tests are implemented for build '${BUILD}'."
fi
